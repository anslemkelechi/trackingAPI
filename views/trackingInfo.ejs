<style>
  .container {
    margin-top: 50px;
    margin-bottom: 50px;
  }
  .card {
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 0.1rem;
  }
  .card-header:first-child {
    border-radius: calc(0.37rem - 1px) calc(0.37rem - 1px) 0 0;
  }
  .card-header {
    padding: 0.75rem 1.25rem;
    margin-bottom: 0;
    background-color: #fff;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    font-size: 2.7rem;
  }

  .track {
    position: relative;
    background-color: #ddd;
    height: 7px;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    margin-bottom: 60px;
    margin-top: 50px;
  }
  .track .step {
    -webkit-box-flex: 1;
    -ms-flex-positive: 1;
    flex-grow: 1;
    width: 25%;
    margin-top: -18px;
    text-align: center;
    position: relative;
  }
  .track .step.active:before {
    background: #32de84;
  }
  .track .step::before {
    height: 7px;
    position: absolute;
    content: "";
    width: 100%;
    left: 0;
    top: 18px;
  }
  .track .step.active .icon {
    background: #32de84;
    color: #fff;
  }
  .track .icon {
    display: inline-block;
    width: 40px;
    height: 40px;
    line-height: 40px;
    position: relative;
    border-radius: 100%;
    background: #ddd;
  }
  .track .step.active .text {
    font-weight: 400;
    color: #000;
  }
  .track .text {
    display: block;
    margin-top: 7px;
  }
  .itemside {
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    width: 100%;
  }
  .itemside .aside {
    position: relative;
    -ms-flex-negative: 0;
    flex-shrink: 0;
  }
  .img-sm {
    width: 80px;
    height: 80px;
    padding: 7px;
  }
  ul.row,
  ul.row-sm {
    list-style: none;
    padding: 0;
  }
  .itemside .info {
    padding-left: 15px;
    padding-right: 7px;
  }
  .itemside .title {
    display: block;
    margin-bottom: 5px;
    color: #212529;
  }
  p {
    margin-top: 0;
    margin-bottom: 1rem;
  }
  .btn-warning {
    color: #ffffff;
    background-color: #32de84;
    border-color: #32de84;
    border-radius: 1px;
  }
  .btn-warning:hover {
    color: #ffffff;
    background-color: #ff2b00;
    border-color: #ff2b00;
    border-radius: 1px;
  }
  .logo-box {
    width: 10%;
    margin: 0 auto;
  }
  .logo-box img {
    width: 100%;
  }
  .barcode-box {
    width: 30%;
    margin: 0 auto;
  }
  .barcode-box img {
    width: 100%;
  }
  .card-body h1 {
    font-size: 2.7rem;
  }
  .info {
    display: grid;
    grid-template-columns: 30% 30% 30%;
    grid-gap: 2rem;
    justify-content: center;
  }
  .info-content {
    background-color: #32de84;
    color: #fff;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
  }
  .info-content h3 {
    font-size: 2rem;
  }
  .map {
    width: 50%;
    margin: 0 auto;
  }
  .history h2 {
    text-align: center;
    font-size: 2rem;
    margin: 3rem auto;
  }
  table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
  }

  td,
  th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
    font-size: 1.7rem;
  }
  tr {
    font-size: 1.7rem;
  }
  tr:nth-child(even) {
    background-color: #dddddd;
  }
  @media screen and (max-width: 768px) {
    .map {
      width: 100%;
    }
  }
  @media screen and (max-width: 500px) {
    .info {
      grid-template-columns: 100%;
    }
  }
</style>
<div class="logo-box">
  <img alt="Ecom" src="/imgs/template/logo.png" />
</div>
<div class="barcode-box">
  <img alt="Ecom" src="/imgs/template/barcode.png" />
</div>
<div class="container">
  <article class="card">
    <header class="card-header">Tracking Info</header>
    <div class="card-body">
      <h1>Order ID: <%= info.trackingNumber %></h1>
      <h1 style="color: red">Status: <%= info.status %></h1>
      <div class="info">
        <div class="info-content">
          <h3>Sender Name: <%= info.senderName %></h3>
        </div>
        <div class="info-content">
          <h3>Sender Address <%= info.senderAddress %></h3>
        </div>
        <div class="info-content">
          <h3>Sender Email: <%= info.senderEmail %></h3>
        </div>
        <div class="info-content">
          <h3>Reciever Name: <%= info.recieverName %></h3>
        </div>
        <div class="info-content">
          <h3>Reciever Address: <%= info.recieverAddress %></h3>
        </div>
        <div class="info-content">
          <h3>Reciever Phone: <%= info.recieverPhone %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment Origin: <%= info.shipmentOrigin %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment Package: <%= info.shipmentPackage %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment Destination: <%= info.shipmentDestination %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment Carrier: <%= info.shipmentCarrier %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment Type: <%= info.shipmentType %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment Weight: <%= info.shipmentWeight %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment Mode: <%= info.shipmentMode %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment RefNo: <%= info.shipmentRefNo %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment Quantity: <%= info.shipmentQuantity %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment Payment Mode: <%= info.shipmentPaymentMode %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment Delivery Date: <%= info.shipmentDeliveryDate %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment Daparture Time: <%= info.shipmentDapatureTimen %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment Pickup Date: <%= info.shipmentPickupDate %></h3>
        </div>
        <div class="info-content">
          <h3>Shipment Pickup Time: <%= info.shipmentPickupTime %></h3>
        </div>
        <div class="info-content">
          <h3 style="color: red">Shipment Comments: <%= info.comments %></h3>
        </div>
      </div>
      <div class="track">
        <div class="step active">
          <span class="icon"> <i class="fa fa-check"></i> </span>
          <span class="text">Order confirmed</span>
        </div>
        <div class="step active">
          <span class="icon"> <i class="fa fa-user"></i> </span>
          <span class="text"> Picked by courier</span>
        </div>
        <div class="step">
          <span class="icon"> <i class="fa fa-truck"></i> </span>
          <span class="text"> On the way </span>
        </div>
        <div class="step">
          <span class="icon"> <i class="fa fa-box"></i> </span>
          <span class="text">Ready for pickup</span>
        </div>
      </div>
    </div>
  </article>
  <div class="map"><%- info.map %></div>
  <div class="history">
    <% if(history) { %>
    <h2>Tracking History</h2>
    <table>
      <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Location</th>
        <th>Status</th>
        <th>UpdatedBy</th>
        <th>Remarks</th>
      </tr>
      <% history.forEach(cur=> {%>
      <tr>
        <td><%= cur.date %></td>
        <td><%= cur.time %></td>
        <td><%= cur.location %></td>
        <td><%= cur.status %></td>
        <td><%= cur.updatedBy %></td>
        <td><%= cur.remarks %></td>
      </tr>
      <% })%>
    </table>
    <% } %>
  </div>
</div>
